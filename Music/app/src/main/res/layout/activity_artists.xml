<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context="com.example.rishabhgoyal.music.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <TextView
            style="@style/CategoryStyle1"
            android:text="Now Playing"
            android:textColor="#000000"
            android:id="@+id/now_playing"/>
        <TextView
            style="@style/CategoryStyle1"
            android:text="Songs"
            android:textColor="#000000"
            android:id="@+id/songs"/>
        <TextView
            style="@style/CategoryStyle1"
            android:text="Genres"
            android:textColor="#000000"
            android:id="@+id/genre"/>
        <TextView
            style="@style/CategoryStyle1"
            android:text="Playlist"
            android:textColor="#000000"
            android:id="@+id/playlist"/>
    </LinearLayout>

    <TextView
        style="@style/CategoryStyle3"
        android:text="Linkin Park" />

    <TextView
        style="@style/CategoryStyle3"
        android:text="Eminem" />

    <TextView
        style="@style/CategoryStyle3"
        android:text="David Guetta" />
    <TextView
        style="@style/CategoryStyle3"
        android:text="One Direction" />
    <TextView
        style="@style/CategoryStyle3"
        android:text="Bon Jovi" />
    <TextView
        style="@style/CategoryStyle3"
        android:text="Kishore Kumar" />
    <TextView
        style="@style/CategoryStyle3"
        android:text="Neha Kakkar" />

</LinearLayout>
